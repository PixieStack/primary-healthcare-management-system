<body>

    <div class="blank-line"></div>
    <div class="center">
        <h1>Prenatal Care Medication Form</h1>
    </div>
    <div class="container">
        <form method="post">
            <label asp-for="Obstetrician">Obstetrician:</label>
            <input asp-for="Obstetrician" type="text" id="firstName" class="form-control" value="@($"{Context.Session.GetString("FirstName")} {Context.Session.GetString("LastName")}")">

            <div class="appointment-form">
                @if (ViewBag.Patients != null)
                {
                    <label for="selected_patient">Select Patient:</label>
                    <div class="search-and-select">
                        <select id="selected_patient" asp-for="Patient" required>
                            <option value="">Select Patient</option>
                            @foreach (var patient in ViewBag.Patients)
                            {
                                <option value="@patient.Id">@patient.FullName</option>
                            }
                        </select>
                        <input type="text" id="search_patient" placeholder="Search patient...">
                    </div>

                    <div class="user-info">
                        <label for="full_name">Patient Name:&nbsp;&nbsp;<span id="selected_full_name"></span></label>
                    </div>
                }
            </div>


            <label asp-for="Medication_Name">Medication Name:</label>
            <select asp-for="Medication_Name" id="medication-name" class="form-control" aria-required="true" required>
                <option value="">Select Option</option>
                <option value="Folic Acid">Folic Acid</option>
                <option value="Iron Supplements">Iron Supplements</option>
                <option value="Prenatal Vitamins">Prenatal Vitamins</option>
                <option value="Acetaminophen (Tylenol)">Acetaminophen (Tylenol)</option>
                <option value="Calcium Supplements">Calcium Supplements</option>
                <option value="Antibiotics">Antibiotics</option>
                <option value="Antinausea Medications">Antinausea Medications</option>
                <option value="Insulin">Insulin</option>
                <option value="Thyroid Medications">Thyroid Medications</option>
                <option value="Asthma Medications">Asthma Medications</option>
                <option value="Anticoagulants">Anticoagulants</option>
                <option value="Antidepressants">Antidepressants</option>
                <option value="Antihypertensive Medications">Antihypertensive Medications</option>
                <option value="Antiviral Medications">Antiviral Medications</option>
                <option value="Epilepsy Medications">Epilepsy Medications</option>
                <option value="Steroids">Steroids</option>
                <option value="Topical Skin Treatments">Topical Skin Treatments</option>
            </select>


            <label asp-for="Start_Date">Start Date:</label>
            <input asp-for="Start_Date" type="date" id="start-date" required>

            <label asp-for="End_Date">Possible End Date:</label>
            <input asp-for="End_Date" type="date" id="possible-end-date" required>

            <label asp-for="Dosage">Dosage:</label>
            <input asp-for="Dosage" type="number" id="possible-dose-count-total" required>

            <label asp-for="Dose_Period">Dose Period:</label>
            <div class="radio-group">
                <label for="daily">
                    <input asp-for="Dose_Period" type="radio" id="daily" value="daily" required>
                    Daily
                </label>
                <label for="weekly">
                    <input asp-for="Dose_Period" type="radio" id="weekly" value="weekly" required>
                    Weekly
                </label>
                <label for="monthly">
                    <input asp-for="Dose_Period" type="radio" id="monthly" value="monthly" required>
                    Monthly
                </label>
            </div>


            <label asp-for="Trimester">Trimester:</label>
            <select asp-for="Trimester" id="trimester" name="trimester" class="form-control" aria-required="true" required>
                <option value="Select">Select Option</option>
                <option value="First Trimester">First Trimester</option>
                <option value="Second Trimester">Second Trimester</option>
                <option value="Third Trimester">Third Trimester</option>
            </select>

            <label asp-for="Directions">How to Take:</label>
            <textarea asp-for="Directions" id="how-to-take" rows="3" required></textarea>

            <label asp-for="Side_Effects">Most Common Side-Effects:</label>
            <textarea asp-for="Side_Effects" id="side-effects" rows="3" required></textarea>

            <div class="centered-button-container">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>


    <script>
        function showSection(sectionId) {
            const sections = ['section1', 'section2'];
            for (const section of sections) {
                document.getElementById(section).style.display = 'none';
            }
            document.getElementById(sectionId).style.display = 'block';
        }
        var dropdown = document.getElementById("selected_patient");
        var fullNameSpan = document.getElementById("selected_full_name");
        var searchInput = document.getElementById("search_patient");

        dropdown.addEventListener("change", function () {
            var selectedOption = dropdown.options[dropdown.selectedIndex];
            var selectedFullName = selectedOption.text;
            fullNameSpan.textContent = selectedFullName;
        });

        searchInput.addEventListener("input", function () {
            var searchTerm = searchInput.value.toLowerCase();
            for (var i = 0; i < dropdown.options.length; i++) {
                var option = dropdown.options[i];
                var fullName = option.text.toLowerCase();
                if (fullName.includes(searchTerm)) {
                    option.style.display = "block";
                } else {
                    option.style.display = "none";
                }
            }
        });
    </script>


