@using System.Data
<!DOCTYPE html>
<html>
<head>
    <title>Profile - Vaccination Sub-System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            background-size: cover;
        }

        h1, h2 {
            margin-top: 20px;
            color: #36517E;
            font-family: "Arial", sans-serif;
            margin-left: -30%;
        }




        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        ul {
            margin-top: 10px;
            padding-left: 20px;
        }

        form {
            margin-bottom: 20px;
        }

        input[type="text"] {
            padding: 5px;
            width: 200px;
        }

        footer {
            background-color: #f5f5f5;
            padding: 10px;
            text-align: center;
        }

        .profile-card {
            background-color: #fff;
            width: 160%;
            margin-left: -30%;
        }

            .profile-card h2 {
                font-size: 20px;
                margin-top: 0;
            }

            .profile-card p {
                color: #555;
                line-height: 1.5;
                display: flex;
                align-items: center;
            }

            .profile-card i {
                margin-right: 10px;
            }

    </style>
</head>
<body>
    <h1>Profile</h1>
    <div class="profile-card">
        <h2>Personal Information</h2>
        @foreach (DataRow row in Model.Rows)
        {
            <p><i class="fas fa-user"></i> Patient Name: @row["Patient"]</p>
            <p><i class="fas fa-calendar-alt"></i> Obstetrician Name: @row["Obstetrician"]</p>
        }
    </div>

    <div class="profile-card">
        <h2>Prenatal Tracking</h2>

        <table style="width: 150%; margin-left: 0%;">
            <thead>
                <tr>
                    <th width="7%">Date</th>
                    <th width="5%">Temperature</th>
                    <th width="5%">Weight</th>
                    <th width="5%">Urine Test</th>
                    <th width="5%">Ultrasound</th>
                    <th width="5%">Blood Pressure</th>
                    <th width="7%">Heart Rate</th>
                    <th width="7%">Glucose</th>
                    <th width="7%">Fetal Movement</th>
                    <th width="7%">Funda Height</th>
                    <th>Genetics</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        <td>@row["Date"]</td>
                        <td>@row["Temperature"]</td>
                        <td>@row["Weight"]</td>
                        <td>@row["Urine_Test"]</td>
                        <td>@row["Ultrasound"]</td>
                        <td>@row["Blood_Pressure"]</td>
                        <td>@row["Heart_Rate"]</td>
                        <td>@row["Glucose_Test"]</td>
                        <td>@row["Fetal_Movement"]</td>
                        <td>@row["Funda_Height"]</td>
                        <td>@row["Genetic_Screening"]</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>


</body>

</html>