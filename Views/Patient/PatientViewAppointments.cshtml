@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upcoming Appointments</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/CodeMed.styles.css">
    <link rel="icon" href="assets/img/favicon.jpg">
    <link rel="apple-touch-icon" href="assets/img/apple-touch-icon.jpg">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .navbar {
            background-color: #36517E;
            color: white;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #36517E;
            font-weight: bold;
        }

        span {
            display: inline-block;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 14px;
            margin-bottom: 15px;
            width: 100%;
        }

            span.time {
                background-color: #36517E;
                color: white;
                text-align: center;
            }

        input[type="submit"] {
            background-color: #36517E;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
            border-radius: 3px;
            width: auto;
        }

            input[type="submit"]:hover {
                background-color: #243d5e;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#" style="font-size: 36px; font-weight: bold;">CodeMed</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Dashboard</a>
                        </li>
                    </ul>
                    <div class="navbar-text">
                        <!-- Login partial -->
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h1 class="text-center">Upcoming Appointments</h1>
        <form>
            <label for="idNumber">ID Number</label>
            <span id="idNumber">@Html.Raw(Context.Session.GetString("ID_Number"))</span>

            <label for="firstName">First Name</label>
            <span id="firstName">@Html.Raw(Context.Session.GetString("FirstName"))</span>

            <label for="lastName">Last Name</label>
            <span id="lastName">@Html.Raw(Context.Session.GetString("LastName"))</span>

            <label for="appointmentDate">Date of Appointment</label>
            <span id="appointmentDate">@Html.Raw(Context.Session.GetString("AppointmentDate"))</span>

            <label for="contactNumber">Contact Number</label>
            <span id="contactNumber">@Html.Raw(Context.Session.GetString("Phone_Number"))</span>

            <label for="timeLeft">Time Left</label>
            <span class="time" id="timeLeft">@Html.Raw(Context.Session.GetString("TimeLeft"))</span>

            <label for="doctor">Service</label>
            <span id="doctor">@Html.Raw(Context.Session.GetString("Doctor"))</span>

            <input type="submit" value="Confirm Appointment">
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
