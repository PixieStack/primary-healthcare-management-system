            const bodyImage = document.getElementById("body-image").value;
            const boundariesAssertiveness = document.getElementById("boundaries-assertiveness").value;
            const traumaTriggers = document.getElementById("trauma-triggers").value;
            const empowermentResilience = document.getElementById("empowerment-resilience").value;
            const sessionNotes = document.getElementById("session-notes").value;

