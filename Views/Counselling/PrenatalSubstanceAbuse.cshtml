            const coOccurringDisorders = document.getElementById("co-occurring-disorders").value;
            const socialSupport = document.getElementById("social-support").value;
            const lifestyleChanges = document.getElementById("lifestyle-changes").value;
            const legalEmploymentIssues = document.getElementById("legal-employment-issues").value;
            const recoveryPlanning = document.getElementById("recovery-planning").value;
            const sessionNotes = document.getElementById("session-notes").value;

