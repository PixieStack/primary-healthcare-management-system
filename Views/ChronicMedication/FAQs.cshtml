    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var popupLinks = document.querySelectorAll('.popup-link');
            var activePopup = null;

            popupLinks.forEach(function (link) {
                link.addEventListener('click', function (event) {
                    event.preventDefault();

                    if (activePopup) {
                        document.body.removeChild(activePopup);
                        activePopup = null;
                    }

                    var popup = document.createElement('div');
                    popup.className = 'popup-message';

                    var closeButton = document.createElement('span');
                    closeButton.className = 'popup-close';
                    closeButton.innerHTML = 'X';

                    var messageContent = document.createElement('span');
                    messageContent.innerHTML = this.getAttribute('data-message');

                    popup.appendChild(closeButton);
                    popup.appendChild(messageContent);

                    var linkRect = this.getBoundingClientRect();

                    popup.style.position = 'absolute';
                    // Adjust the top and left positions
                    popup.style.top = (linkRect.top + window.scrollY + linkRect.height) + 'px';
                    popup.style.left = (linkRect.left + window.scrollX) + 'px';

                    closeButton.style.position = 'absolute';
                    closeButton.style.top = '5px';
                    closeButton.style.right = '5px';

                    popup.appendChild(closeButton);

                    document.body.appendChild(popup);

                    closeButton.addEventListener('click', function () {
                        document.body.removeChild(popup);
                        activePopup = null;
                    });

                    activePopup = popup;
                });
            });
        });
    </script>
